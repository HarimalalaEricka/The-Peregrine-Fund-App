<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp">

    <!-- Form Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/general_info_title"
        android:textColor="#000000"
        android:fontFamily="serif"
        android:textSize="18sp"
        android:layout_marginTop="18dp"
        android:layout_marginStart="82dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center">


            <!-- Datetime -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="8dp">

                <!-- Label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/datetime_label"
                    android:textColor="#000000"
                    android:fontFamily="serif"
                    android:textSize="18sp"
                    android:layout_marginBottom="6dp" />

                <!-- Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="#FFFFFF"
                    app:boxBackgroundMode="filled"
                    app:boxBackgroundColor="#FFFFFF"
                    app:boxCornerRadiusTopStart="9dp"
                    app:boxCornerRadiusTopEnd="9dp"
                    app:boxCornerRadiusBottomStart="9dp"
                    app:boxCornerRadiusBottomEnd="9dp"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_datetime"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/datetime_hint"
                        android:focusable="false"
                        android:clickable="true"
                        android:inputType="none"
                        android:gravity="center_vertical"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:textColor="#000000"
                        android:textSize="16sp"/>
                                    </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>


            <!-- Status -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <!-- Label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status_label"
                    android:textColor="#000000"
                    android:fontFamily="serif"
                    android:textSize="18sp"
                    android:layout_marginBottom="6dp" />

                <!-- Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="#FFFFFF"
                    app:boxBackgroundMode="filled"
                    app:boxBackgroundColor="#FFFFFF"
                    app:boxCornerRadiusTopStart="9dp"
                    app:boxCornerRadiusTopEnd="9dp"
                    app:boxCornerRadiusBottomStart="9dp"
                    app:boxCornerRadiusBottomEnd="9dp"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    app:endIconMode="dropdown_menu"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/edit_status"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/status_hint"
                        android:inputType="none"
                        android:focusable="true"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:textColor="#000000"
                        android:textSize="16sp"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center">

        <!-- Intervention -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/intervention_label"
                android:textColor="#000000"
                android:fontFamily="serif"
                android:textSize="18sp"
                android:layout_marginBottom="6dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="#FFFFFF"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="#FFFFFF"
                app:boxCornerRadiusTopStart="9dp"
                app:boxCornerRadiusTopEnd="9dp"
                app:boxCornerRadiusBottomStart="9dp"
                app:boxCornerRadiusBottomEnd="9dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:endIconMode="dropdown_menu"
                app:hintEnabled="false">

                <AutoCompleteTextView
                    android:id="@+id/edit_intervention"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/intervention_hint"
                    android:inputType="none"
                    android:focusable="false"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textColor="#000000"
                    android:textSize="16sp"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <!-- Zone -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zone_label"
                android:textColor="#000000"
                android:fontFamily="serif"
                android:textSize="18sp"
                android:layout_marginBottom="6dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="#FFFFFF"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="#FFFFFF"
                app:boxCornerRadiusTopStart="9dp"
                app:boxCornerRadiusTopEnd="9dp"
                app:boxCornerRadiusBottomStart="9dp"
                app:boxCornerRadiusBottomEnd="9dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:endIconMode="dropdown_menu"
                app:hintEnabled="false">

                <AutoCompleteTextView
                    android:id="@+id/edit_zone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/zone_hint"
                    android:inputType="none"
                    android:focusable="false"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textColor="#000000"
                    android:textSize="16sp"/>
            </com.google.android.material.textfield.TextInputLayout>
        
        </LinearLayout>
    </LinearLayout>
    <!-- Form Fields Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center">

            <!-- Direction -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/direction_label"
                    android:textColor="#000000"
                    android:fontFamily="serif"
                    android:textSize="18sp"
                    android:layout_marginBottom="6dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="#FFFFFF"
                    app:boxBackgroundMode="filled"
                    app:boxBackgroundColor="#FFFFFF"
                    app:boxCornerRadiusTopStart="9dp"
                    app:boxCornerRadiusTopEnd="9dp"
                    app:boxCornerRadiusBottomStart="9dp"
                    app:boxCornerRadiusBottomEnd="9dp"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    app:endIconMode="dropdown_menu"
                    app:hintEnabled="false">

                    <AutoCompleteTextView
                        android:id="@+id/edit_direction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/direction_hint"
                        android:inputType="none"
                        android:focusable="false"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:textColor="#000000"
                        android:textSize="16sp"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!-- surface approxi -->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/surface_label"
                    android:textColor="#000000"
                    android:fontFamily="serif"
                    android:textSize="18sp"
                    android:layout_marginBottom="6dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="#FFFFFF"
                    app:boxBackgroundMode="filled"
                    app:boxBackgroundColor="#FFFFFF"
                    app:boxCornerRadiusTopStart="9dp"
                    app:boxCornerRadiusTopEnd="9dp"
                    app:boxCornerRadiusBottomStart="9dp"
                    app:boxCornerRadiusBottomEnd="9dp"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    app:hintEnabled="false">

                    <EditText
                        android:id="@+id/edit_surface"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/surface_hint"
                        android:inputType="numberDecimal"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:gravity="center_vertical"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
    </LinearLayout>
</LinearLayout>